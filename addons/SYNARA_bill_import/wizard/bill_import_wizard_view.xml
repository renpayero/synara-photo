<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_synara_bill_import_wizard_form" model="ir.ui.view">
        <field name="name">synara.bill.import.wizard.form</field>
        <field name="model">synara.bill.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Bills with AI">
                <group>
                    <field name="file_ids" widget="many2many_binary" options="{'accepted_file_extensions': '.jpg, .jpeg, .png, .webp'}"/>
                </group>
                <footer>
                    <button name="action_import_bills" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_synara_bill_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Bills (AI)</field>
        <field name="res_model">synara.bill.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_synara_bill_import"
              name="Import Bills (AI)"
              parent="account.menu_finance_payables"
              action="action_synara_bill_import_wizard"
              sequence="15"/>
</odoo>
