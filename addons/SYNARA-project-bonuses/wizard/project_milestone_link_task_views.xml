<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_milestone_link_task_form" model="ir.ui.view">
        <field name="name">project.milestone.link.task.form</field>
        <field name="model">project.milestone.link.task</field>
        <field name="arch" type="xml">
            <form string="Vincular Tareas">
                <group>
                    <field name="milestone_id" invisible="1"/>
                    <field name="project_id" invisible="1"/>
                    <field name="task_ids" widget="many2many" options="{'no_create': True}"/>
                </group>
                <div invisible="not warning_message">
                    <field name="warning_message" readonly="1"/>
                </div>
                <footer>
                    <button name="action_link_tasks" string="Vincular" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_milestone_link_task" model="ir.actions.act_window">
        <field name="name">Vincular Tareas</field>
        <field name="res_model">project.milestone.link.task</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
