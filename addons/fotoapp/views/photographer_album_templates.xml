<odoo>
  <data>
    <template id="photographer_album_detail" name="Detalle de álbum (fotógrafo)">
      <t t-call="website.layout">
        <div id="wrap" class="oe_structure">
          <section class="py-5">
            <div class="container">
              <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <div>
                  <h1 class="h4 mb-1" t-esc="album.name"/>
                  <p class="text-muted mb-0">Evento: <t t-esc="album.event_id.name"/></p>
                </div>
                <a class="btn btn-secondary" t-attf-href="/mi/fotoapp/evento/#{ album.event_id.id }">Volver al evento</a>
              </div>
              <div class="d-flex flex-wrap gap-2 mb-4">
                <form method="post" onsubmit="return confirm('¿Eliminar el álbum y desvincular sus fotos?');">
                  <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                  <input type="hidden" name="action" value="delete_album"/>
                  <button type="submit" class="btn btn-outline-danger">Eliminar álbum</button>
                </form>
              </div>
              <t t-call="fotoapp.photographer_portal_nav"/>
              <t t-if="errors">
                <div class="alert alert-danger" role="alert">
                  <ul class="mb-0">
                    <li t-foreach="errors" t-as="error" t-esc="error"/>
                  </ul>
                </div>
              </t>
              <t t-if="album_success">
                <div class="alert alert-success" role="alert" t-esc="album_success"/>
              </t>
              <div class="row g-4">
                <div class="col-lg-4">
                  <form method="post" class="card shadow-sm mb-4">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="action" value="update_album"/>
                    <div class="card-body">
                      <h2 class="h6 mb-3">Configurar álbum</h2>
                      <div class="mb-3">
                        <label class="form-label">Nombre</label>
                        <input type="text" class="form-control" name="name" t-att-value="album.name" required="required"/>
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Límite de descargas</label>
                        <input type="number" class="form-control" name="download_limit" min="0" t-att-value="album.download_limit"/>
                        <small class="text-muted">0 = ilimitado.</small>
                      </div>
                      <div class="form-check form-switch mb-3">
                        <input class="form-check-input" type="checkbox" name="is_private" id="album_private" t-att-checked="'checked' if album.is_private else None"/>
                        <label class="form-check-label" for="album_private">Álbum privado</label>
                        <small class="text-muted d-block">Cuando está privado, el álbum no se muestra en el homepage. Al desactivar se publica automáticamente.</small>
                      </div>
                      <button type="submit" class="btn btn-primary w-100">Guardar</button>
                    </div>
                  </form>

                  <form method="post" enctype="multipart/form-data" class="card shadow-sm">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <input type="hidden" name="action" value="upload_photo"/>
                    <div class="card-body">
                      <h2 class="h6 mb-3">Subir nuevas fotos</h2>
                      <div class="mb-3">
                        <label class="form-label">Precio *</label>
                        <input type="number" step="0.01" min="0" class="form-control" name="price" required="required"/>
                        <small class="text-muted">Se aplicará el mismo precio a todas las fotos del lote.</small>
                      </div>
                      <div class="mb-3">
                        <label class="form-label">Archivos*</label>
                        <input type="file" class="form-control" name="image_files" accept="image/*" multiple="multiple" required="required"/>
                        <small class="text-muted">Seleccioná las imagenes a cargar.</small>
                      </div>
                      <p class="text-muted small mb-3">El identificador se asigna automáticamente a cada foto.</p>
                      <button type="submit" class="btn btn-primary w-100">Subir fotos</button>
                    </div>
                  </form>
                </div>
                <div class="col-lg-8">
                  <div class="card shadow-sm">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center mb-3">
                        <h2 class="h5 mb-0">Fotos del álbum</h2>
                        <span class="text-muted" t-esc="len(photos)"/> fotos
                      </div>
                      <t t-if="photos">
                        <div class="table-responsive">
                          <table class="table align-middle">
                            <thead>
                              <tr>
                                <th>Vista previa</th>
                                <th>Nombre</th>
                                <th>#</th>
                                <th>Precio</th>
                                <th>Tamaño</th>
                                <th>Estado</th>
                                <th>Archiva en</th>
                                <th></th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr t-foreach="photos" t-as="photo">
                                <td style="width:120px;">
                                  <img class="img-thumbnail" t-att-src="'/web/image/tienda.foto.asset/%s/imagen_watermark' % photo.id" alt="Foto"/>
                                </td>
                                <td style="min-width:220px;">
                                  <form method="post" class="d-flex gap-2 align-items-center flex-wrap">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="action" value="update_photo_name"/>
                                    <input type="hidden" name="photo_id" t-att-value="photo.id"/>
                                    <input type="text" name="photo_name" class="form-control form-control-sm" t-att-value="photo.name" placeholder="Nombre de la foto" required="required"/>
                                    <button class="btn btn-sm btn-outline-primary" type="submit">Guardar</button>
                                  </form>
                                </td>
                                <td t-esc="photo.numero_dorsal or photo.id"/>
                                <td>
                                  <form method="post" class="d-flex gap-2 align-items-center flex-wrap">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="action" value="update_photo_price"/>
                                    <input type="hidden" name="photo_id" t-att-value="photo.id"/>
                                    <div class="input-group input-group-sm" style="max-width: 160px;">
                                      <span class="input-group-text" t-esc="photo.currency_id.symbol"/>
                                      <input type="number" step="0.01" min="0.01" class="form-control" name="photo_price" t-att-value="photo.precio" required="required"/>
                                    </div>
                                    <button class="btn btn-sm btn-primary" type="submit">Actualizar</button>
                                  </form>
                                </td>
                                <td>
                                  <span class="text-muted">
                                    <t t-esc="'%.2f' % ((photo.file_size_bytes or 0) / (1024 * 1024))"/> MB
                                  </span>
                                </td>
                                <td>
                                  <span class="badge text-uppercase" t-attf-class="badge bg-#{'success' if photo.lifecycle_state == 'published' else ('secondary' if photo.lifecycle_state == 'draft' else 'dark')}">
                                    <t t-esc="photo.lifecycle_state or 'pending'"/>
                                  </span>
                                </td>
                                <td>
                                  <t t-if="photo.lifecycle_state == 'published' and photo.days_until_archive is not False">
                                    <span t-esc="photo.days_until_archive"/> días
                                  </t>
                                  <t t-if="photo.lifecycle_state != 'published' or photo.days_until_archive is False">—</t>
                                </td>
                                <td class="text-end">
                                  <form method="post" class="d-inline">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                    <input type="hidden" name="photo_id" t-att-value="photo.id"/>
                                    <button class="btn btn-sm btn-outline-secondary" name="action" value="publish_photo" t-if="photo.lifecycle_state != 'published'">Publicar</button>
                                    <button class="btn btn-sm btn-outline-warning" name="action" value="archive_photo" t-if="photo.lifecycle_state != 'archived'">Archivar</button>
                                  </form>
                                </td>
                              </tr>
                            </tbody>
                          </table>
                        </div>
                      </t>
                      <t t-if="not photos">
                        <p class="text-muted mb-0">No hay fotos en este álbum. Utiliza el formulario para subir nuevas imágenes.</p>
                      </t>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
      </t>
    </template>

    <template id="photographer_archived_photos" name="Fotos archivadas">
      <t t-call="website.layout">
        <div id="wrap" class="oe_structure">
          <section class="py-5">
            <div class="container">
              <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <div>
                  <h1 class="h4 mb-1">Fotos archivadas</h1>
                  <p class="text-muted mb-0">Revisa las imágenes que ya no están visibles en la tienda.</p>
                </div>
                <a class="btn btn-secondary" href="/mi/fotoapp">Volver al panel</a>
              </div>
              <t t-call="fotoapp.photographer_portal_nav"/>
              <div class="card shadow-sm">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                    <form method="get" class="d-flex gap-2">
                      <input class="form-control" type="text" name="search" placeholder="Buscar por número o álbum" t-att-value="search"/>
                      <button class="btn btn-outline-primary" type="submit">Buscar</button>
                    </form>
                    <span class="text-muted" t-esc="len(photos)"/> resultados
                  </div>
                  <t t-if="photos">
                    <div class="table-responsive">
                      <table class="table align-middle">
                        <thead>
                          <tr>
                            <th>Vista previa</th>
                            <th>#</th>
                            <th>Evento</th>
                            <th>Álbum</th>
                            <th>Tamaño</th>
                            <th>Estado</th>
                            <th>Archivada</th>
                            <th>Elimina en</th>
                            <th></th>
                          </tr>
                        </thead>
                        <tbody>
                          <tr t-foreach="photos" t-as="photo">
                            <td style="width:100px;">
                              <img class="img-thumbnail" t-att-src="'/web/image/tienda.foto.asset/%s/imagen_watermark' % photo.id" alt="Foto"/>
                            </td>
                            <td t-esc="photo.numero_dorsal or photo.id"/>
                            <td t-esc="photo.evento_id.name"/>
                            <td>
                              <t t-if="photo.album_ids">
                                <t t-esc="', '.join(photo.album_ids.mapped('name'))"/>
                              </t>
                              <t t-if="not photo.album_ids">—</t>
                            </td>
                            <td>
                              <span class="text-muted">
                                <t t-esc="'%.2f' % ((photo.file_size_bytes or 0) / (1024 * 1024))"/> MB
                              </span>
                            </td>
                            <td>
                              <span class="badge bg-dark text-uppercase" t-esc="photo.lifecycle_state or 'archived'"/>
                            </td>
                            <td>
                              <t t-if="photo.archived_at">
                                <t t-esc="photo.archived_at.strftime('%d/%m/%Y')"/>
                              </t>
                              <t t-if="not photo.archived_at">—</t>
                            </td>
                            <td>
                              <t t-if="photo.days_until_delete is not False">
                                <span t-esc="photo.days_until_delete"/> días
                              </t>
                              <t t-if="photo.days_until_delete is False">—</t>
                            </td>
                            <td class="text-end">
                              <form method="post" class="d-inline">
                                <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                <input type="hidden" name="photo_id" t-att-value="photo.id"/>
                                <button class="btn btn-sm btn-outline-secondary" name="action" value="restore">Restaurar</button>
                                <button class="btn btn-sm btn-outline-danger" name="action" value="delete" onclick="return confirm('¿Eliminar definitivamente la foto?');">Eliminar</button>
                              </form>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </div>
                  </t>
                  <t t-if="not photos">
                    <p class="text-muted mb-0">No tenés fotos archivadas en este momento.</p>
                  </t>
                </div>
              </div>
            </div>
          </section>
        </div>
      </t>
    </template>
  </data>
</odoo>
