<template id="fotoapp_gallery_preview_modal" inherit_id="website.layout" name="FotoApp gallery preview modal">
  <xpath expr="//body" position="inside">
    <div id="fotoappPreviewModal" class="modal fade" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content bg-dark">
          <div class="modal-header border-0 pb-0" style="position:absolute; right:0; top:0; z-index:10;">
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
          </div>
          <div id="fotoappPreviewContainer" class="modal-body p-0">
            <img id="fotoappPreviewImg" alt=""/>
          </div>
        </div>
      </div>
    </div>
    <style>
          #fotoappPreviewModal .modal-content { max-height: 95vh; }
          #fotoappPreviewContainer {
            background: #000;
            overflow: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            max-height: 85vh;
            position: relative;
          }
          #fotoappPreviewContainer.fotoapp-zoomed-container {
            overflow: auto;
            cursor: grab;
            padding: 50vh 50vw;
            display: block;
          }
          #fotoappPreviewContainer.fotoapp-zoomed-container.fotoapp-grabbing {
            cursor: grabbing;
          }
          #fotoappPreviewImg {
            max-width: 100%;
            max-height: 85vh;
            object-fit: contain;
            cursor: zoom-in;
            display: block;
          }
          #fotoappPreviewContainer.fotoapp-zoomed-container #fotoappPreviewImg {
            max-width: none;
            max-height: none;
            cursor: grab;
            margin: 0 auto;
            display: block;
          }
    </style>
    <script><![CDATA[
          (function () {
            const triggerClass = 'fotoapp-preview-trigger';
            const maxAttempts = 30;
            let attempt = 0;
            let initialized = false;

            // Pan state
            let isPanning = false;
            let hasMoved = false;
            let startX = 0;
            let startY = 0;
            let scrollLeft = 0;
            let scrollTop = 0;
            
            // Zoom state
            let naturalWidth = 0;
            let naturalHeight = 0;
            const zoomFactor = 2;

            const cleanupZoom = (containerEl, imgEl) => {
              if (containerEl) {
                containerEl.classList.remove('fotoapp-zoomed-container', 'fotoapp-grabbing');
                containerEl.scrollTop = 0;
                containerEl.scrollLeft = 0;
              }
              if (imgEl) {
                imgEl.style.width = '';
                imgEl.style.height = '';
              }
              isPanning = false;
              hasMoved = false;
            };

            const getModalAPI = (modalEl, containerEl, imgEl) => {
              if (window.bootstrap && window.bootstrap.Modal) {
                const modal = new window.bootstrap.Modal(modalEl, { focus: true });
                modalEl.addEventListener('hidden.bs.modal', () => cleanupZoom(containerEl, imgEl));
                return { show: () => modal.show() };
              }
              if (window.jQuery && window.jQuery.fn && window.jQuery.fn.modal) {
                window.jQuery(modalEl).on('hidden.bs.modal', () => cleanupZoom(containerEl, imgEl));
                return { show: () => window.jQuery(modalEl).modal('show') };
              }
              return null;
            };

            const initHandlers = () => {
              attempt += 1;

              const modalEl = document.getElementById('fotoappPreviewModal');
              const containerEl = document.getElementById('fotoappPreviewContainer');
              const imgEl = document.getElementById('fotoappPreviewImg');
              if (!modalEl || !imgEl || !containerEl) {
                if (attempt < maxAttempts) { return false; }
                return true;
              }

              const modal = getModalAPI(modalEl, containerEl, imgEl);
              if (!modal) {
                if (attempt < maxAttempts) { return false; }
                return true;
              }

              if (initialized) {
                return true;
              }

              // Store natural dimensions when image loads
              imgEl.addEventListener('load', () => {
                naturalWidth = imgEl.naturalWidth;
                naturalHeight = imgEl.naturalHeight;
              });

              // Open modal on trigger click
              document.addEventListener('click', (ev) => {
                const target = ev.target.closest('.' + triggerClass);
                if (!target) { return; }
                ev.preventDefault();
                const src = target.getAttribute('data-preview-src');
                if (!src) { return; }
                imgEl.src = src;
                imgEl.alt = target.getAttribute('data-preview-alt') || '';
                cleanupZoom(containerEl, imgEl);
                modal.show();
              });

              // Toggle zoom on image click (only if no drag movement)
              imgEl.addEventListener('click', (ev) => {
                // If there was movement during drag, don't toggle zoom
                if (hasMoved) {
                  hasMoved = false;
                  return;
                }
                
                const isZoomed = containerEl.classList.contains('fotoapp-zoomed-container');
                if (isZoomed) {
                  cleanupZoom(containerEl, imgEl);
                } else {
                  // Apply zoomed size using actual dimensions
                  const zoomedWidth = naturalWidth * zoomFactor;
                  const zoomedHeight = naturalHeight * zoomFactor;
                  imgEl.style.width = zoomedWidth + 'px';
                  imgEl.style.height = zoomedHeight + 'px';
                  containerEl.classList.add('fotoapp-zoomed-container');
                  
                  // Center scroll after applying zoom
                  setTimeout(() => {
                    containerEl.scrollLeft = (containerEl.scrollWidth - containerEl.clientWidth) / 2;
                    containerEl.scrollTop = (containerEl.scrollHeight - containerEl.clientHeight) / 2;
                  }, 10);
                }
              });

              // Pan functionality for dragging
              containerEl.addEventListener('mousedown', (ev) => {
                if (!containerEl.classList.contains('fotoapp-zoomed-container')) { return; }
                isPanning = true;
                hasMoved = false;
                containerEl.classList.add('fotoapp-grabbing');
                startX = ev.pageX;
                startY = ev.pageY;
                scrollLeft = containerEl.scrollLeft;
                scrollTop = containerEl.scrollTop;
                ev.preventDefault();
              });

              containerEl.addEventListener('mouseleave', () => {
                if (isPanning) {
                  isPanning = false;
                  containerEl.classList.remove('fotoapp-grabbing');
                }
              });

              containerEl.addEventListener('mouseup', () => {
                isPanning = false;
                containerEl.classList.remove('fotoapp-grabbing');
              });

              containerEl.addEventListener('mousemove', (ev) => {
                if (!isPanning) { return; }
                ev.preventDefault();
                const deltaX = ev.pageX - startX;
                const deltaY = ev.pageY - startY;
                
                // Mark as moved if there was significant movement
                if (Math.abs(deltaX) > 5 || Math.abs(deltaY) > 5) {
                  hasMoved = true;
                }
                
                containerEl.scrollLeft = scrollLeft - deltaX;
                containerEl.scrollTop = scrollTop - deltaY;
              });

              // Touch support for mobile
              containerEl.addEventListener('touchstart', (ev) => {
                if (!containerEl.classList.contains('fotoapp-zoomed-container')) { return; }
                if (ev.touches.length === 1) {
                  isPanning = true;
                  hasMoved = false;
                  startX = ev.touches[0].pageX;
                  startY = ev.touches[0].pageY;
                  scrollLeft = containerEl.scrollLeft;
                  scrollTop = containerEl.scrollTop;
                }
              }, { passive: true });

              containerEl.addEventListener('touchend', () => {
                isPanning = false;
              });

              containerEl.addEventListener('touchmove', (ev) => {
                if (!isPanning || ev.touches.length !== 1) { return; }
                const deltaX = ev.touches[0].pageX - startX;
                const deltaY = ev.touches[0].pageY - startY;
                
                if (Math.abs(deltaX) > 5 || Math.abs(deltaY) > 5) {
                  hasMoved = true;
                }
                
                containerEl.scrollLeft = scrollLeft - deltaX;
                containerEl.scrollTop = scrollTop - deltaY;
              }, { passive: true });

              initialized = true;
              return true;
            };

            const tryInit = () => {
              if (initHandlers()) { return; }
              if (attempt >= maxAttempts) { return; }
              setTimeout(tryInit, 150);
            };

            if (document.readyState === 'loading') {
              document.addEventListener('DOMContentLoaded', tryInit);
            } else {
              tryInit();
            }
          })();
        ]]>    </script>
  </xpath>
</template>

