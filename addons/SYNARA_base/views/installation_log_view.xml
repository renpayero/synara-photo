<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_synara_installation_log_tree" model="ir.ui.view">
        <field name="name">synara.installation.log.list</field>
        <field name="model">synara.installation.log</field>
        <field name="arch" type="xml">
            <list string="Installation Logs" create="false" edit="false" delete="false">
                <field name="date"/>
                <field name="user_id"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state == 'draft'"/>
            </list>
        </field>
    </record>

    <record id="view_synara_installation_log_form" model="ir.ui.view">
        <field name="name">synara.installation.log.form</field>
        <field name="model">synara.installation.log</field>
        <field name="arch" type="xml">
            <form string="Installation Log" create="false" edit="false" delete="false">
                <header>
                    <button name="action_execute_installation" string="Install &amp; Restart Server" type="object" class="btn-primary" invisible="state != 'draft'" confirm="This will install the modules and restart the server. The page will reload automatically. Continue?"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                        </group>
                    </group>
                    <field name="line_ids" readonly="1">
                        <list decoration-success="status == 'installed'" decoration-info="status == 'to_install'" decoration-danger="status == 'missing'">
                            <field name="name"/>
                            <field name="status" widget="badge" decoration-success="status == 'installed'" decoration-info="status == 'to_install'" decoration-danger="status == 'missing'"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_synara_installation_log" model="ir.actions.act_window">
        <field name="name">Installation Logs</field>
        <field name="res_model">synara.installation.log</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No installation logs found.
            </p>
        </field>
    </record>

    <menuitem id="menu_synara_installation_log"
              name="Installation Logs"
              parent="menu_synara_base_root"
              action="action_synara_installation_log"
              sequence="20"/>
</odoo>
