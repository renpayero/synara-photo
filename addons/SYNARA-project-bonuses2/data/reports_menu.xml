<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_task_bonus_list" model="ir.ui.view">
            <field name="name">project.task.bonus.list</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <list string="Liquidación de Bonos" multi_edit="1" sample="1" decoration-muted="x_bonus_paid == True">
                    <field name="project_id" optional="hide"/>
                    <field name="user_ids" widget="many2many_avatar_user" optional="show"/>
                    <field name="milestone_id" string="Objetivo"/>
                    
                    <field name="name" string="Tarea"/>
                    
                    <field name="x_task_value" sum="Total Tareas"/>
                    
                    <field name="x_milestone_bonus_percentage" string="% Bono (Obj)" avg="Promedio %"/>
                    
                    <field name="x_milestone_bonus_status" widget="badge" 
                           decoration-success="x_milestone_bonus_status == 'qualified'"
                           decoration-danger="x_milestone_bonus_status == 'failed'"/>

                    <field name="x_final_bonus_payout" sum="Total a Pagar" widget="monetary" 
                           decoration-bf="1" decoration-success="x_final_bonus_payout &gt; 0"/>
                    
                    <field name="x_bonus_paid" widget="boolean_toggle"/>
                    <field name="company_currency_id" column_invisible="1"/>
                </list>
            </field>
        </record>

        <record id="action_project_bonus_report" model="ir.actions.act_window">
            <field name="name">Liquidación de Bonos</field>
            <field name="res_model">project.task</field>
            <field name="view_mode">list,pivot,form</field>
            <field name="domain">[('milestone_id', '!=', False)]</field>
            <field name="context">{'group_by': ['user_ids', 'milestone_id']}</field>
            <field name="view_id" ref="view_project_task_bonus_list"/>
        </record>

        <menuitem id="menu_project_bonus_report" 
                  name="Liquidación de Bonos" 
                  action="action_project_bonus_report" 
                  parent="project.menu_project_report" 
                  sequence="30"/>
    </data>
</odoo>